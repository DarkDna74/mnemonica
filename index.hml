        ];

        function genera(carta) {
            let index = lista_carte.indexOf(carta) + 1;
            if (index > 0) {
                let transcodingTable = "ABCDEFGHIJ";
                let indexStr = index.toString();//.padStart(2, 'A'); // Aggiunge 'A' se necessario
                
                let firstDigit = indexStr.length === 1 ? 'A' : transcodingTable[parseInt(indexStr[0])];
                let secondDigit = transcodingTable[parseInt(indexStr[indexStr.length - 1])];
                
                let url = `https://stopwatch-three-ashen.vercel.app/?format=A${firstDigit}${secondDigit}`;
                window.location.href = url;
            }
        }
    </script>
